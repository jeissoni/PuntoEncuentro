@model PuntoEncuentro.Models.LoginModelo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/sb-admin/style.css" rel="stylesheet" />
    <title>Usuarios Punto de Encuentro</title>
</head>
<body>
    <div class="cont">
        <div class="demo">
            <div class="login">
                <div class="login__check"></div>
                @using (Html.BeginForm("Index", "Login"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="login__form">
                        <div class="login__row">
                            <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                            </svg>
                            @*<input type="text" class="login__input name" placeholder="Usuario"/>*@
                            <input id="inputUsuario" class="login__input name" type="text" autofocus="" required="" placeholder="Usuario" name="inputUsuario">
                        </div>
                        <div class="login__row">
                            <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                            </svg>
                            <input id="inputPassword" class="login__input pass" type="password" required="" placeholder="Contraseña" name="inputPassword">
                            @*<input type="password" class="login__input pass" placeholder="Contraseña"/>*@
                        </div>


                        <div class="submit">
                            @*<button type="button" class="login__submit">Ingresar</button>*@
                            <input id="btIngresar" class="login__submit" type="submit" value="Ingresar" name="btIngresar" />
                        </div>
                        <p class="login__signup">
                            No recuerda su cuenta? &nbsp;<a>Ingrese acá</a>
                        </p>
                    </div>
                }
            </div>

        </div>
    </div>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/index.js"></script>
</body>
</html>
