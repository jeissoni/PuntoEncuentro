@model IEnumerable<PuntoEncuentro.Entidades.t_Usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="usuarios" class="table">
    <thead>
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.tipoIdNumUsuario)*@
            Tipo Documento
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.primerNombre)*@
            Primer Nombre
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.segundoNombre)*@
            Segundo Nombre
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.primerApellido)*@
            Primer Apellido
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.segundoApellido)*@
            Segundo Apellido
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.tipoUsuario)*@
            Tipo de Usuario
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.fechaNacimiento)*@
            Fecha de Nacimiento
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Celular)*@
            Celular
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NumeroFijo)*@
            Número Fijo
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CorreoElectronico)*@
            Correo Electronico
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Ocupacion)*@
            Ocupacion
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.t_EstadoCivil.NombreEstadoCivil)*@
            Estado Civil
        </th>
